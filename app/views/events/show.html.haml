.page-header
  = link_to events_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_event_path(@event), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show event

%dl.dl-horizontal
  %dt Name:
  %dd= @event.name
  %dt Dt:
  %dd= @event.dt
  %dt Description:
  %dd= @event.description
  %dt Invite dt from:
  %dd= @event.invite_dt_from
  %dt Invite dt to:
  %dd= @event.invite_dt_to
  %dt Participant min:
  %dd= @event.participant_min
  %dt Participant max:
  %dd= @event.participant_max
  %dt Answer limit:
  %dd= @event.answer_limit
  %dt Im in:
  %dd= @event.im_in
  %dt Publish present:
  %dd= @event.publish_present
