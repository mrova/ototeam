= form_for @event, :html => { :class => "form-horizontal" } do |f|
  -if @event.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"

      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, :class => 'form-control'
  .form-group
    = f.label :dt, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :dt, :class => 'form-control'
  .form-group
    = f.label :description, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :description, :class => 'form-control'
  .form-group
    = f.label :invite_dt_from, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :invite_dt_from, :class => 'form-control'
  .form-group
    = f.label :invite_dt_to, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :invite_dt_to, :class => 'form-control'
  .form-group
    = f.label :participant_min, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :participant_min, :class => 'form-control'
  .form-group
    = f.label :participant_max, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :participant_max, :class => 'form-control'
  .form-group
    = f.label :answer_limit, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :answer_limit, :class => 'form-control'
  .form-group
    = f.label :im_in, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.check_box :im_in, :class => 'form-control'
  .form-group
    = f.label :publish_present, :class => 'col-sm-2 control-label'
    .col-sm-10
      = f.check_box :publish_present, :class => 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => 'btn btn-primary'
